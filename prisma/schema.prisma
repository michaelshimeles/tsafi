generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model user {
  id                Int      @id @default(autoincrement())
  created_at        DateTime @default(now()) @db.Timestamptz(6)
  email             String   @unique
  first_name        String?
  last_name         String?
  profile_image_url String?
  user_id           String   @unique
}

model documents {
  id          Int      @id @default(autoincrement())
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  document_id String   @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  document    String?
  title       String
  user_id     String
  site_id     String?
}

model category {
  id       Int     @id @default(autoincrement())
  user_id  String
  category String
  site_id  String?
  blog     blog[]
}

model author {
  id                 Int     @id @default(autoincrement())
  user_id            String
  author_id          String  @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  author_name        String
  author_profile_img String
  author_instagram   String?
  author_twitter     String?
  site_id            String?
  blog               blog[]
}

model blog {
  id          Int      @id @default(autoincrement())
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  user_id     String
  blog_html   String
  image       String
  image_alt   String
  category_id Int
  author_id   String   @db.Uuid
  title       String
  subtitle    String
  slug        String
  keywords    String[]
  published   Boolean? @default(true)
  shareable   Boolean  @default(false)
  site_id     String?
  author      author   @relation(fields: [author_id], references: [author_id], onDelete: NoAction, onUpdate: NoAction)
  category    category @relation(fields: [category_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model sites {
  id                 BigInt    @id @default(autoincrement())
  created_at         DateTime  @default(now()) @db.Timestamptz(6)
  user_id            String?
  site_id            String?   @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  site_name          String?
  site_description   String?
  site_subdomain     String?   @unique
  site_logo          String?
  site_cover_image   String?
  site_custom_domain String?
  updated_at         DateTime? @updatedAt @db.Timestamptz(6)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model chat {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  user_id    String?
  messages   Json?
}
